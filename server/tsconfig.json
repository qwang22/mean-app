{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es5", "es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}